        h2 Admins
        a(href="/admin/createadmin", class='btn btn-success btn-sm')
            i.glyphicon.glyphicon-plus
            span  Add admin

        if admins
            each admin in admins
                .media
                    .media-left
                        img.admin-profile-pic.img-circle(src=admin.imageUrl ||
                        "/img/male-profile-pic-placeholder.png")
                    .media-body
                        h4= admin.name
                        p= admin.email
                        a(href=`/admin/${admin.id}/deleteadmin`, class='btn btn-warning')
                            i.glyphicon.glyphicon-trash
                        a(href=`/admin/${admin.id}/createadmin`, class='btn btn-warning')
                            i.glyphicon.glyphicon-edit


        else if !admins || !admins.length
                p No admins registered yet
