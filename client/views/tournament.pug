extends layout.pug

block content
    .container

        h2 Games
        a(href="/admin/creategame", class='btn btn-success btn-sm')
            i.glyphicon.glyphicon-plus
            span  Add game
        if games.length
            each game in games
                .media
                    .media-left
                        img(src=game.imageUrl ||
                        "/img/male-profile-pic-placeholder.png")
                    .media-body
                        h4= game.name
                        a(href=`/admin/${game.id}/deletegame`, class='btn btn-warning')
                            i.glyphicon.glyphicon-trash
                        a(href=`/admin/${game.id}/updategame`, class='btn btn-warning')
                            i.glyphicon.glyphicon-edit
        else
            h3 No games yet. Add a game.

        h2 Tournaments
        a(href="/admin/createtournament", class='btn btn-success btn-sm')
            i.glyphicon.glyphicon-plus
            span  Add Tournament
        if tournaments.length
            each tournament in tournaments
                .media
                    .media-left
                        img(src=tournament.game.imageUrl ||
                        "/img/male-profile-pic-placeholder.png")
                    .media-body
                        h4= tournament.game.name
                        p date: #{tournament.date}
                        p start time: #{tournament.starttime}
                        p end time: #{tournament.endtime}
                        p location: #{tournament.location}
                        a(href=`/admin/${tournament.id}/deletetournament`, class='btn btn-warning')
                            i.glyphicon.glyphicon-trash
                        a(href=`/admin/${tournament.id}/updatetournament`, class='btn btn-warning')
                            i.glyphicon.glyphicon-edit

        else
            h3 No upcoming tournaments.

