extends layout.pug

block content
    .container
        h2 Update admin
        form(action=`/admin/${admin.id}/updateadmin` method='POST')
            .form-group
                label(for='name') Naam:
                input#name(type='text', name='name', value=admin.name)
            .form-group
                label(for='email') E-mail:
                input#email(type='text', name='email' value=admin.email)
            .form-group
                label(for="image") Cover Image
                input.form-control(type="file", name="image", id="image")
            .form-group.hidden
                label(for="imageUrl") Cover Image URL
                input.form-control(type="text", name="imageUrl", id="imageUrl", value=admin.imageUrl)
            .form-group
                button#update-admin-button.btn.btn-success(type="submit") Update